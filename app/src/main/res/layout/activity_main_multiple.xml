<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Firebase Image Upload Tutorial"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ShowImageView"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/textview"
                android:layout_marginTop="20dp" />

            <Button
                android:id="@+id/ButtonChooseImage"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ShowImageView"
                android:layout_marginTop="20dp"
                android:text="Choose Image" />

            <EditText
                android:id="@+id/prodid"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ButtonChooseImage"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:hint="Enter Prod id Here" />

            <EditText
                android:id="@+id/prodname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prodid"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:hint="Enter Prod Name Here" />

            <EditText
                android:id="@+id/prodmrp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prodname"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:hint="Enter Prod MRP Here" />

            <EditText
                android:id="@+id/proddp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prodmrp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:hint="Enter Prod DP Here" />

            <Button
                android:id="@+id/ButtonUploadImage"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/proddp"
                android:layout_marginTop="20dp"
                android:text="Upload image to Firebase Storage" />

            <Button
                android:id="@+id/DisplayImagesButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ButtonUploadImage"
                android:layout_marginTop="10dp"
                android:text="Show All Uploaded Images" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>